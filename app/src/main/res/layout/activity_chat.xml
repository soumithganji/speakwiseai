<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/primary_dark_grey"
        tools:context="chat.gpt.speakwise.gpt3.ai.chatbot.Activities.ChatActivity">

        <TextView
            android:id="@+id/welcome_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="SpeakWise AI"
            android:textColor="@color/primary_white"
            android:textSize="25sp"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/bottom_layout" />

        <LinearLayout
            android:id="@+id/bottom_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="16dp"
                    android:layout_toStartOf="@+id/btnVoice"
                    android:background="@drawable/rounded_corner"
                    android:backgroundTint="@color/primary_medium_grey"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp">

                    <EditText
                        android:id="@+id/message_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:layout_toStartOf="@id/sendBtn"
                        android:background="@null"
                        android:hint="Ask me anything..."
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:textColor="@color/white"
                        android:textColorHint="#8E8E9F"
                        android:textCursorDrawable="@drawable/custom_cursor"
                        android:textSize="16sp" />

                    <ImageButton
                        android:id="@+id/sendBtn"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/ic_send"
                        android:backgroundTint="#8E8E9F"
                        tools:ignore="ContentDescription" />

                </RelativeLayout>

                <ImageButton
                    android:id="@+id/btnVoice"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/ic_mic"
                    android:backgroundTint="#8E8E9F"
                    tools:ignore="ContentDescription" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tvWarning"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="Powered by GPT-3. SpeakWise AI may unintentionally propagate misinformation or misconceptions."
                android:textColor="#98989C"
                android:textSize="12sp" />

        </LinearLayout>

    </RelativeLayout>

</layout>
