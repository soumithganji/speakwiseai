<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Widget.SpeakWiseAI.AppWidget.Container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@style/Theme.SpeakWiseAI.AppWidgetContainer">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary_black"
        android:padding="10dp">

        <TextView
            android:id="@+id/appwidget_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="5dp"
            android:layout_toLeftOf="@id/imIcon"
            android:fontFamily="@font/sebino_medium"
            android:text="+  New Chat"
            android:textColor="@color/primary_white"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/imIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/logo_vector_small" />

    </RelativeLayout>

</RelativeLayout>